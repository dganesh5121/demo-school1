<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRowBack"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TableRow
        android:id="@+id/hwTrHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/present_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Done"
                android:textColor="@color/textClrPri"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/halfday_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Due"
                android:textColor="@color/textClrPri"
                android:textSize="16sp" />
        </TableRow>
      <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/absent_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Not Done"
                android:textColor="@color/textClrPri"
                android:textSize="16sp" />
        </TableRow>
    </TableRow>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#ffffff"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hwTrIndicator"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
             android:padding="5dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hwTvSDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:15"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TableRow
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </TableRow>

                <TextView
                    android:id="@+id/hwTvEDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:15"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/hwTvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/textClrPri"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/hwImgStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/absent_ic" />
                </TableRow>
                <TextView
                    android:id="@+id/hwTvSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="-"
                    android:layout_gravity="right"
                    android:textColor="@color/textClrSec"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/hwTvDisc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text="-"
                    android:textColor="@color/textClrSec"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

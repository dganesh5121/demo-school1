<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/slider_menu_top_bg"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.techindiana.school.parent.Utils.CircularImageView
                            android:id="@+id/homeImgUser"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/login_user_profile_img" />

                        <ImageView
                            android:id="@+id/homeImgAUser"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="3dp"
                            android:padding="1dp"
                            android:src="@mipmap/active_child_ic"
                            android:background="@drawable/circle_white"
                            android:layout_gravity="bottom|right"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/homeTvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:text="John Doe"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textClrWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <com.techindiana.school.parent.Utils.CircularImageView
                            android:id="@+id/homeImgUser3"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_margin="2dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"

                            android:src="@mipmap/login_user_profile_img" />
                            <ImageView
                                android:id="@+id/homeImgAUser3"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="3dp"
                                android:padding="1dp"
                                android:src="@mipmap/active_child_ic"
                                android:background="@drawable/circle_white"
                                android:layout_gravity="bottom|right"/>
                        </FrameLayout>
                        <TextView
                            android:id="@+id/homeTvUserName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="Doe"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textClrWhite"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <com.techindiana.school.parent.Utils.CircularImageView
                            android:id="@+id/homeImgUser2"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_horizontal"
android:layout_margin="2dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/login_user_profile_img" />
                            <ImageView
                                android:id="@+id/homeImgAUser2"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="3dp"
                                android:padding="1dp"
                                android:src="@mipmap/active_child_ic"
                                android:background="@drawable/circle_white"
                                android:layout_gravity="bottom|right"/>
                        </FrameLayout>
                        <TextView
                            android:id="@+id/homeTvUserName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="John"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textClrWhite"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <TableRow

                android:id="@+id/homeMnTrHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <ImageView

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#ffffff"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="0.1dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"

                        android:src="@mipmap/splash_screen_logo" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/admissionEnq"
                        android:textAllCaps="true"
                        android:textColor="@color/textClrPri"
                        android:textSize="18sp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_margin="5dp"


                            android:text="Parent info"
                            android:textAllCaps="true"
                            android:textColor="@color/textClrPri"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"

                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="3dp"
                                android:background="@mipmap/dot" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/divider" />
                        </LinearLayout>
                    </TableRow>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="First Name"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText

                            android:id="@+id/admEtFName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="15dp"
                            android:ems="10"
android:singleLine="true"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"

                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Last Name"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/admEtLName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="15dp"
                            android:ems="10"

                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"

                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Mobile No."
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/admEtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:drawablePadding="15dp"
                            android:ems="10"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"
                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:maxLength="15"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Email Id"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/admEtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:drawablePadding="15dp"
                            android:ems="10"

                            android:inputType="textEmailAddress"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"
                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Current Address"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/admEtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:drawablePadding="15dp"
                            android:ems="10"
                            android:inputType="text"

                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"
                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:maxLength="15"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"


                            android:text="Child info"
                            android:textAllCaps="true"
                            android:textColor="@color/textClrPri"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"

                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="3dp"
                                android:background="@mipmap/dot" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/divider" />
                        </LinearLayout>
                    </TableRow>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Name"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/admEtCName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="15dp"
                            android:ems="10"

                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"

                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="School Name"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="20dp"
                            android:drawableRight="@mipmap/ic_arrow_down"
                            android:ems="10"
                            android:inputType="text"
                            android:padding="3dp"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"

                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/admSpiSchool"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#00000000"
                            android:drawableRight="@mipmap/ic_arrow_down"


                            android:textColor="@color/textClrPri"
                            android:textSize="12sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"


                        android:text="Class"
                        android:textColor="@color/textClrPri"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_backgroung"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawablePadding="20dp"
                            android:drawableRight="@mipmap/ic_arrow_down"
                            android:ems="10"
                            android:inputType="text"
                            android:padding="3dp"
                            android:paddingLeft="15dp"
                            android:text=""
                            android:textColor="@color/textClrPri"

                            android:textColorHint="@color/textClrSec"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/admSpiClass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#00000000"
                            android:drawableRight="@mipmap/ic_arrow_down"


                            android:textColor="@color/textClrPri"
                            android:textSize="12sp" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#00000000"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                    </FrameLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton

        android:id="@+id/admBtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/ic_btn_arrow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:backgroundTint="@color/btnColor" />
</LinearLayout>